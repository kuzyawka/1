#include <stdio.h>
#include <stdlib.h>
int main()
{
	printf("Naiti novie znacheniya peremennix.Esli a=b, to a=b=0, if a<>b, to if a>b, to b=a, if b>a, to a=b: ");
	int a, b;
	printf("\nVvedem a: ");
	scanf_s("%i", &a);
	printf("\nVvedem b: ");
	scanf_s("%i", &b);
	if (a == b) {
		a = b = 0;
		printf(("\na= %i, \nb= %i"), a, b);
	}
	if (a != b) {
		if (a > b) {
			b = a;
			printf(("\na= %i, \nb= %i"), a, b);

		}
		else {
			a = b;
			printf(("\na= %i, \nb= %i"), a, b);
		}
	}
	return 0;
}


