1.


#include <stdio.h>
#include <math.h>
int main()
{
	printf("Naity kolichestvo polnix kilobaytov faila iz baytov :");
	int b; float k;
	printf("\nVvedem b: ");
	scanf_s("%i", &b);
	k = ((float) b / 1024);
	printf("\nKilobaity= %f", ceil(k));
	return 0;
}


2.

#include <stdio.h>
#include <math.h>
int main()
{
	printf("Naity kolichestvo polnix otrezkov b na otrezke a (a>b) :");
	int b, a; float k;
	printf("\nVvedem a: ");
	scanf_s("%i", &a);
	printf("\nVvedem b: ");
	scanf_s("%i", &b);
	if (a > b) {
		k = ((float)a / b);
		printf("\nKolichestvo otrezkov= %f", floor(k));
	}
	else printf("Neverno");
	return 0;
}


3.


#include <stdio.h>
#include <math.h>
int main()
{
	printf("Naity ostavsheesya mesto bez otrezkov b na otrezke a (a>b) :");
	int b, a; float k;
	printf("\nVvedem a: ");
	scanf_s("%i", &a);
	printf("\nVvedem b: ");
	scanf_s("%i", &b);
	if (a > b) {
		k =floor( ((float)a / b));
		printf("\nMesta ostalos= %f", a-k*b );
	}
	else printf("Neverno");
	return 0;
}



