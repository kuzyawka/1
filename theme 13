#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
	setlocale(LC_ALL, "Rus");
	printf("Дано вещественное число — цена 1 кг конфет. Вывести стоимость 0.1, 0.2, . . . , 1 кг конфет: ");
	float d, i; int n;
	printf("\nVvedem n: ");
	scanf_s("%i", &n);
	
	for (i = 1; i <= 10;i++) {

		d = (float)n * i*0.1;
		printf("\nStoimost =%f", d);
		
	}
return 0;
}


2.


#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
	setlocale(LC_ALL, "Rus");
	printf("Дано целое число N (> 0). Найти произведение 1.1 · 1.2 · 1.3 · . . . (N сомножителей).: ");
	float d, i; int n, y;
	printf("\nVvedem n: ");
	scanf_s("%i", &n);
	d = 1;
	y = n;
	i = 1.1;
	for (y=1; y <= n; y++) {
d =d*i ;
i=i+0.1;
}
	printf("\nStoimost =%f", d);
	return 0;
}


3.


#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
	setlocale(LC_ALL, "Rus");
	printf("Дано целое число N (> 0). Найти квадрат данного числа, используя для его вычисления следующую формулу: N2 = 1 + 3 + 5 + . . . + (2·N − 1). После добавления к сумме каждого слагаемого выводить текущее значение суммы: ");
	float d, i; int n, y, s;
	printf("\nVvedem n: ");
	scanf_s("%i", &n);
	y = 2 * n - 1;
	i = 1;
	s = 0;
	for (i = 1; i <= y; i += 2) {
		s += i;
		printf("\nSumma = % i", s);
	}
	printf("\nKvadrat(конец)= %i", n * n);
	return 0;
}



4.


#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include<math.h>

int main()
{
	setlocale(LC_ALL, "Rus");
	printf("Дано целое число N (> 0). Найти квадрат данного числа, используя для его вычисления следующую формулу: N2 = 1 + 3 + 5 + . . . + (2·N − 1). После добавления к сумме каждого слагаемого выводить текущее значение суммы: ");
	float d, i; int n, y, s, a;
	printf("\nVvedem n: ");
	scanf_s("%i", &n);
	printf("\nVvedem a: ");
	scanf_s("%i", &a);

	s = 0;
	for (i = 0; i <= n; i ++) {
		s =s+ pow(a, i);
		
	}
	printf("\nSumma = % i", s);
	return 0;
}



