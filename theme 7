1.


#include <stdio.h>
int main()
{
	printf("Opredelit znachenie ugla 0<a<360 gradusov v radianax pri 180gradusov=pi");
	int a; float znach; 
	printf("\nVvedem a: ");
	scanf_s("%i", &a);
	if ((a > 0) && (a < 360)) {
		znach = (float)a / 180;
		printf("\nZnachenie= %f", znach);
	}
	else {
		printf("Neverno");
	}

	return 0;
}



2.



#include <stdio.h>
int main()
{
	printf("Opredelit znachenie ugla 0<a<2Pi radian v gradusax pri 180gradusov=pi");
	int a; int znach; int b = 180;
	printf("\nVvedem a: ");
	scanf_s("%i", &a);
	if ((a > 0) && (a < 2)) {
		znach = a * b;
		printf("\nZnachenie= %i", znach);
	}
	else printf("Neverno");

	return 0;
}


3.


#include <stdio.h>
int main()
{
	printf("Opredelit skolko stoit kg y konfet esli x kg stoit a rubley");
	int a, x, y; float kg, zenay;
	printf("\nVvedem a: ");
	scanf_s("%i", &a);
	printf("\nVvedem x: ");
	scanf_s("%i", &x);
	printf("\nVvedem y: ");
	scanf_s("%i", &y);
	kg = (float)a / x;
	zenay = kg * y;
	printf(("\nKg= %f, \nZena y kg= %f"), kg, zenay);

	return 0;
}


4.


#include <stdio.h>
int main()
{
	printf("Opredelit rasstoyanie mezhdu udalyauschimisya drug ot druga avtomobilyami, skorosti v1 i v2 cherez vremya t: ");
	int v1, v2, t, s; 
	printf("\nVvedem v1a: ");
	scanf_s("%i", &v1);
	printf("\nVvedem v2: ");
	scanf_s("%i", &v2);
	printf("\nVvedem t: ");
	scanf_s("%i", &t);
	s = v1 * t + v2 * t;
	printf("\nRasstoyanie spustya vremya t= %i", s);

	return 0;
}


5.


#include <stdio.h>
int main()
{
	printf("Reshit A*x+B=0 pri a<>0, b - znacheniya: ");
	int a, b; float res;
	printf("\nVvedem a: ");
	scanf_s("%i", &a);
	printf("\nVvedem b: ");
	scanf_s("%i", &b);
	if (a != 0) {
		res = (float)(-b) / a;

		printf("\nResultat= %f", res);
	}
	else printf("Neverno");
	return 0;
}


6.

#include <stdio.h>
int main()
{
	int a1, a2, b1, b2, c1, c2; float x, y;
	scanf_s("%i", &a1);
	scanf_s("%i", &a2);
	scanf_s("%i", &b1);
	scanf_s("%i", &b2);
	scanf_s("%i", &c1);
	scanf_s("%i", &c2);
	y = (a1 * c2 - a2 * c1) / (a1 * b2 - a2 * b1);
	x = (c1 - b1 * y) / a1;
	printf(("\nX= %f, \nY =%f"), x, y);
	return 0;
}
