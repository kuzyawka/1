1.


#include <stdio.h>
int main()
{
	printf("Opredelit znachenie ugla 0<a<360 gradusov v radianax pri 180gradusov=pi");
	int a; float znach; 
	printf("\nVvedem a: ");
	scanf_s("%i", &a);
	if ((a > 0) && (a < 360)) {
		znach = (float)a / 180;
		printf("\nZnachenie= %f", znach);
	}
	else {
		printf("Neverno");
	}

	return 0;
}



2.



#include <stdio.h>
int main()
{
	printf("Opredelit znachenie ugla 0<a<2Pi radian v gradusax pri 180gradusov=pi");
	int a; int znach; int b = 180;
	printf("\nVvedem a: ");
	scanf_s("%i", &a);
	if ((a > 0) && (a < 2)) {
		znach = a * b;
		printf("\nZnachenie= %i", znach);
	}
	else printf("Neverno");

	return 0;
}


3.


#include <stdio.h>
int main()
{
	printf("Opredelit skolko stoit kg y konfet esli x kg stoit a rubley");
	int a, x, y; float kg, zenay;
	printf("\nVvedem a: ");
	scanf_s("%i", &a);
	printf("\nVvedem x: ");
	scanf_s("%i", &x);
	printf("\nVvedem y: ");
	scanf_s("%i", &y);
	kg = (float)a / x;
	zenay = kg * y;
	printf(("\nKg= %f, \nZena y kg= %f"), kg, zenay);

	return 0;
}

